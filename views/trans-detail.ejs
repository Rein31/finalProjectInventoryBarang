<h1>Welcome to Detail Transaksi # <%= detTrans[0].id_transaksi %></h1>

<p><b>Detail Transaksi :</b></p>

<div class="d-flex flex-row">
    <div class="p-2">
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th scope="col-2">No.</th>
                    <th scope="col-2">Tanggal</th>
                    <th scope="col-3">Nama Barang</th>
                    <th scope="col-3">Stok</th>
                    <th scope="col-3">Status</th>
                </tr>
            </thead>
            <tbody>
                <% if (detTrans.length === 0) { %>
                    <p><i><b>Data is empty</b></i></p>
                    <% }else { %>
                        <% let count = 1 %>
                        <% detTrans.forEach(e => { %>
                            <tr>
                                <input type="hidden" name="idTrans" value="<%= e.id_transaksi %>">
                                <td scope="row"><%= count %> </th>
                                <td scope="row"><%= e.tanggal.toDateString() %> </td>
                                <td scope="row"><%= e.nama_barang %> </td>
                                <td scope="row"><%= e.stok %> </td>
                                <% if (e.status === "in") { %>
                                    <td scope="row" class="text-success"><b>IN</b></td>
                                <% }else if (e.status === "out"){ %>
                                    <td scope="row" class="text-danger"><b>OUT</b> </td>
                                <% }else { %>
                                    <td scope="row">-</td>
                                <% } %>  
                            </tr>
                            <% count++; %> 
                        <% }) %>
                        <% } %>
            </tbody>
        </table>
    </div>

</div>